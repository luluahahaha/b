cd /etc/ansible
touch ansible.config
echo -n "P@ssw0rd" >> .vault_pass
[defaults]
inventory = /etc/ansible/hosts
vault_password_file = /etc/ansible/.vault_pass

ansible-vault encrypt_string root --vault_password_file /etc/ansible/.vault_pass >> /etc/ansible/hosts
ansible-vault encrypt_string P@ssw0rd --vault_password_file /etc/ansible/.vault_pass >> /etc/ansible/hosts

